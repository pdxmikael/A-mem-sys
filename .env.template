# API Keys for A-MEM System
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (required for OpenAI backend)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Anthropic backend)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Set default backend
DEFAULT_LLM_BACKEND=openai
DEFAULT_LLM_MODEL=gpt-4.1-mini

# Set to false to permit OpenAI models to fall back to using the Chat Completion API
OPENAI_DISABLE_CHAT_FALLBACK=true

# Set the default temperature for the LLM; maps onto reasoning levels for reasoning models (minimal: up to 0.3, low: up to 0.7, medium: up to 1.0; high: 1.0 and above)
AGENTIC_MEMORY_LLM_TEMPERATURE = 0.2